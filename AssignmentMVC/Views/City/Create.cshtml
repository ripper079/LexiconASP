 @* @model City *@
 @model CityViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create a City</h1>


<form asp-controller="City" asp-action="Create" method="post" class="form-control">

	<div asp-validation-summary="All"></div>

	<div class="form-group">
		<label asp-for="CityName"></label>
		<input asp-for="CityName" class="form-control" />
	</div>

	<div class="form-group">
		<label>Country Name</label>
		<select asp-for="Country_Id" asp-items="ViewBag.Countries" class="form-control"></select>
	</div>

	<input type="submit" value="ADD CITY" class="btn btn-primary" />

</form>



