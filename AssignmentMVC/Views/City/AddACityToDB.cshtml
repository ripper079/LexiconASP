@{
    ViewData["Title"] = "AddACityToDB";
}

<h1>AddACityToDB</h1>


<h1>Add a city </h1>

@* Make sure that 'name' property of select element matches corresponding  parameter list (POST action method) *@
<form asp-controller="City" asp-action="AddACityToDB" method="post" class="form-control">
	<div class="form-group">
		<label>City: </label>
		<input type="text" name="NameOfCity" class="form-control"/>
	</div>

	<div class="form-group">
		<label>Country</label>
		<select name="IdOfCountry" asp-items="ViewBag.Countries" class="form-control"></select>
	</div>

	<input type="submit" value="ADD" class="btn btn-primary"/>
</form>


