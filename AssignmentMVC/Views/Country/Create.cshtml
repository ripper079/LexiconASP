@*@model Country*@

@model CountryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Country</h1>

<form asp-controller="Country" asp-action="Create" method="post" class="form-control">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="CountryName"></label>
        <input asp-for="CountryName" class="form-control" />
    </div>

    <input type="submit" value="Add a CoUNTry" class="btn btn-primary"/>
</form>

