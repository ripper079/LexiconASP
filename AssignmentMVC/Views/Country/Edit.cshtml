@* @model Country *@
@model CountryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit the Country - @ViewBag.NameOfCountryToEdit</h1>


<form asp-controller="Country" asp-action="Edit" method="post" class="form-control">
	<div asp-validation-summary="All"></div>

	<div class="form-group">
		<label asp-for="Id"></label>
		<input asp-for="Id" readonly="readonly" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="CountryName"></label>
		<input asp-for="CountryName" class="form-control" />
	</div>

	<input type="submit" value="Edit CouNTRY" class="btn btn-primary" />

</form>



