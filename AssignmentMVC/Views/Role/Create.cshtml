@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role";
}

<h1>Create a Role</h1>


@* Make sure that name property of select element matches corresponding  parameter list (POST action method) *@
<form asp-controller="Role" asp-action="Create" method="post" class="form-control">
	
	<div class="form-group">
		<label asp-for="RoleName"></label>
		<input asp-for="RoleName" class="form-control" />
		<span asp-validation-for="RoleName" class="text-danger"></span>
	</div>


	
	<input type="submit" value="Add a Role" class="btn btn-primary" />
</form>

