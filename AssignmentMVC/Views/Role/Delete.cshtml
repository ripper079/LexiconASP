@model DeleteRoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete a Role</h1>

<form asp-controller="Role" asp-action="Delete" method="post" class="form-control">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" disabled class="form-control" />
    </div>

    <input type="submit" value="Delete Role" class="btn btn-danger" />

</form>



