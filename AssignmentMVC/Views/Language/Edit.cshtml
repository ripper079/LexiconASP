@model LanguageViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit a language</h1>

<form asp-controller="Language" asp-action="Edit" method="post" class="form-control">

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id">If of Language</label>
        <input asp-for="Id" readonly="readonly" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <input type="submit" value="Edit language" class="btn btn-primary" />

</form>