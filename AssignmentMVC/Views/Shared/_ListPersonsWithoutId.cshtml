@model AssignmentMVC.Models.PeopleViewModel;

@{
    ViewData["Title"] = "List all Persons Without ID";
}

<h3>Data from a PeopleViewModel</h3>

<table>
    <tr>
        <th>Id number</th>
        <th>FullName</th>
        <th>Phone Number</th>
        <th>City</th>        
    </tr>
@foreach (var aPersonInstance in Model.listOfPersons)
{    
    <tr>
        <td>@aPersonInstance.IdPerson</td>
        <td>@aPersonInstance.FullName</td>
        <td>@aPersonInstance.PhoneNumber</td>
        <td>@aPersonInstance.CityOfPerson.CityName</td>

    </tr>   
}
</table>